<h1><%= @dose.cocktail.name %></h1>

<% @dose.cocktail.doses.each do |dose| %>

  <h3><%= dose.ingredient.name %><span> - <%= dose.description %></span></h3>
  <%= link_to '', "/#{dose.cocktail.id}/#{dose.id}", class: "fas fa-trash", method: :delete %>
  <%= link_to '', "/#{dose.cocktail.id}/#{dose.id}", class: "far fa-edit"%>

<% end %>

<form method="post" action=<% "/#{@dose.cocktail.id}" %>>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Gin</label>
    <select class="form-control" id="exampleFormControlSelect1" name="ingredient">
        <option><%= @dose.ingredient.name %></option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Dose</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="1" name="description"><%= @dose.description %></textarea>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit" class="btn btn-primary">Update ingredient</button>
</form>
